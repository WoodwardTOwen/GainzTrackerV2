<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.woodward.gainztrackerv2.main.MainUIViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:id="@+id/item_expandable_header_root"
            android:padding="12dp">

            <TextView
                android:id="@+id/textViewWeightHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="Weighted Exercise Data" />

            <ImageView
                android:id="@+id/item_expandable_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textViewWeightHeader"
                app:srcCompat="@drawable/keyboard_down"
                app:tint="@color/colorAccent" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>