<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exercise"
            type="com.woodward.gainztrackerv2.database.entity.WeightedExerciseData" />

        <!-- Need a clickListener here -->

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#858b97"
            android:padding="8dp">
            <!-- onClick goes here -->

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:weightFormatted="@{exercise}"
                tools:text="@string/Sets" />

            <TextView
                android:id="@+id/textViewReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textViewWeight"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:repsFormatted="@{exercise}"
                tools:text="Barbell Bench Press" />

            <TextView
                android:id="@+id/textViewRPE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rpeFormatted="@{exercise}"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>